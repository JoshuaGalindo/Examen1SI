@model IEnumerable<Examen1SI.Models.Citasmedicas.Cita_Medica>

@{ ViewData["Title"] = "Citas";
}

<h1>Citas Medicas Programadas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Programar Cita</a>

</p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CitaID)
                    @Html.DisplayNameFor(model => model.CitaNombre)
                </th>
                <th>

                </th>
            </tr>

        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(modelItem => item.CitaID)</td>
                    <td>@Html.DisplayFor(modelItem => item.CitaNombre)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.CitaID">Editar</a>
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.CitaID">Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CitaID">Borrar</a>

                    </td>

                </tr>
                
            }

        </tbody>

    </table>

